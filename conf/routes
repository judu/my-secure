# This file defines all module routes (Higher priority routes first)
#
# import these routes in the main app as :
# *     /                       module:Secure
#
# ~~~~

GET     /logout                 Secure.doLogout
GET     /secure/logout          Secure.logout
GET     /choice                 Secure.displayChoice

# Auth-specific urls

# Basic Auth
GET     /basic/login            secure.secproviders.BasicSecurityProvider.login
GET     /basic/logout           secure.secproviders.BasicSecurityProvider.logout
POST    /basic/login            secure.secproviders.BasicSecurityProvider.authenticate

# Google Auth
GET     /gapp/login             secure.secproviders.GoogleSecurityProvider.login
GET     /gapp/logout            secure.secproviders.GoogleSecurityProvider.logout 
GET     /gapp/authd             secure.secproviders.GoogleSecurityProvider.finishAuth
